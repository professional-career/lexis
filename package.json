{
	"name": "mi-erp-monorepo",
	"private": true,
	"scripts": {
		"// --- COMANDOS MAESTROS ---": "",
		"dev": "pnpm db:up && concurrently \"pnpm shared:watch\" \"pnpm api:dev\" \"pnpm web:dev\"",
		"build:all": "pnpm shared:build && pnpm api:build && pnpm web:build",
		"// --- BASE DE DATOS ---": "",
		"db:up": "docker-compose up -d postgres",
		"db:down": "docker-compose down",
		"db:logs": "docker logs -f erp_database",
		"db:nuke": "docker-compose down -v",
		"// --- ATAJOS A LOS PROYECTOS ---": "",
		"shared:watch": "pnpm --filter @erp/shared run build --watch",
		"shared:build": "pnpm --filter @erp/shared run build",
		"api:format": "pnpm --filter api run format",
		"api:dev": "pnpm --filter api run start:dev",
		"api:build": "pnpm --filter api run build",
		"generate:env": "node tools/set-env.js",
		"web:dev": "pnpm generate:env && pnpm --filter client run start",
		"web:build": "pnpm generate:env && pnpm --filter client run build",
		"postinstall": "node tools/setup.js"
	},
	"devDependencies": {
		"concurrently": "^9.2.1",
		"cross-env": "^10.1.0",
		"dotenv": "^17.2.3",
		"wait-on": "^9.0.3"
	}
}